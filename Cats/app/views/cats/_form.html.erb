<% if type == "new" %>
    <% action_url = cats_url %>
    <% button_text = 'Create Cat!' %>
<% else %>
    <% action_url = cat_url(@cat) %>
    <% button_text = 'Edit Cat!' %>
<% end %>


<form action="<%= action_url %>" method="POST">
    <% if type == "edit" %>
    <input type="hidden" name="_method" value="PATCH">
    <% end %>
    
    <label>Name:
        <input type="text" name="cat[name]" value="<%= @cat.name %>">
    </label>

    <br><br>

    <label for="sex">Sex:</label>
    <label for="male">Male</label>
    <input type="radio" name="cat[sex]" id="male" value= "M" <%= @cat.sex == 'M' ? "checked" : '' %> >
    <label for="female">Female</label>
    <input type="radio" name="cat[sex]" id="female" value= "F" <%= @cat.sex == 'F' ? "checked" : '' %>>
 

    <br><br>

    <label for="colors">Choose A Color:</label>
    <select name="cat[color]">
        <option disabled <%= type == 'new' ? "selected" : '' %>>--select a color--</option>
        <% Cat::COLORS.each do |color| %>
            <option value="<%= color %>" <%= (@cat.color == color) ? "selected" : '' %>> <%= "#{color}" %> </option>
        <% end %>
    </select>

    <br><br>

    <label>Birthday:
        <input type="date" name="cat[birth_date]" value="<%= @cat.birth_date %>">
    </label>

    <br><br>

    <label for="description">Description:
        <textarea name="cat[description]" id="description" ><%= @cat.description%></textarea>
    </label>

    <br><br>

    <input type="submit" value= "<%= button_text%>">

</form>






